#! /bin/sh

~/.config/polybar/launch.sh &
~/.config/bspwm/scripts/swallow &

pgrep -x sxhkd > /dev/null || sxhkd &

bspc config ignore_ewmh_struts   true

bspc monitor -d 1 2 3 4
bspc monitor Virtual2 -d 5 6 7 8


bspc config focused_border_color "#555555"
bspc config normal_border_color "#222222"

# bspc config -m Virtual1 top_padding 43
# bspc config window_gap          56

bspc config window_gap          44
bspc config -m Virtual1 top_padding 45

bspc config border_width         0

bspc rule -a * state=floating sticky=on follow=off focus=on rectangle=640x360+2760+1040

bspc config external_rules_command "${HOME}/.config/bspwm/external_rules"

bspc config split_ratio          0.52

bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

bspc rule -a Chromium desktop='^2'
bspc rule -a spotify desktop='^4' follow=on

# spotify > /dev/null 2>&1 &

imwheel -b 45 &

picom --experimental-backends &

