[global]
  monitor = 0
  follow = none

  width = (0, 800)
  height = 300

  origin = bottom-right
  offset = 20x25

  gap_size = 10

  frame_width = 1
  corner_radius = 5

  transparency = [0, 100]

  notification_limit = 3

  progress_bar = true
  progress_bar_height = 10
  progress_bar_frame_width = 0
  progress_bar_min_width = 150
  progress_bar_max_width = 300

  indicate_hidden = yes

  padding = 13
  horizontal_padding = 14
  text_icon_padding = 21

  sort = yes

  font = NKDuy Mono 9.5

  line_height = 6

  markup = full
  format = "<b>%s</b>\n%b"

  vertical_alignment = center

  show_age_threshold = 60

  ellipsize = middle

  stack_duplicates = true
  hide_duplicate_count = false

  show_indicators = yes

  min_icon_size = 0
  max_icon_size = 70

  icon_position = left
  icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

  # Maximum amount of notifications kept in history
  history_length = 20

  dmenu = /usr/bin/dmenu -p dunst:

  browser = /usr/bin/xdg-open

  always_run_script = true

  title = Dunst
  class = Dunst

  ignore_dbusclose = false
  ignore_newline = no

  mouse_left_click = close_current
  mouse_middle_click = do_action, close_current
  mouse_right_click = close_all

  # force_xwayland = false
  force_xinerama = true

[experimental]
  per_monitor_dpi = false

# background = "#0b1014"
# foreground = "#637799"
# frame_color = "#32404c"

[urgency_low]
  background = "#2C2C30"
  foreground = "#9195a5"
  frame_color = "#444444"
  timeout = 4

[urgency_normal]
  background = "#2C2C30"
  foreground = "#9195a5"
  frame_color = "#444444"
  timeout = 4

[urgency_critical]
  background = "#900000"
  foreground = "#72777f"
  frame_color = "#32404c"
  timeout = 0
